extends layout

block content
  #header
    p
      a(href='/') Just Another Trail Map
  #wrapper
    #left
      h1 #{info.trailname}
      p
        | Location: #{info.location}
        br
        |  Date to hiked: #{info.date}
        br
        |  Elapsed time: #{info.time}
        br
        |  Distance: #{info.distance} miles
        br
        |  User: #{info.user}
        br
        | Description: #{info.description}
        br
        span(name='err', id='err')


      if info.owner
        p
          a(href="/edittrail/#{info._id}") Edit
          br
          a(onclick="deleteTrail('/trail/#{info._id}'); return false;" href="/trail/#{info._id}" ) Delete

    #right

      #canvas


  script(src="http://maps.googleapis.com/maps/api/js?key=AIzaSyDkohyGWwhivFD0oijRDxD8EmyLGfCpXtw")
  script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js')
  script(src='/js/cli-trail.js')
