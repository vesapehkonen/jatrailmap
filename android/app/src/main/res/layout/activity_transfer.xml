<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context="com.jatrailmap.justanothertrailmap.TransferActivity">

<TextView
    android:text="@string/text_send_trail"
    android:textSize="18dp"
    android:id="@+id/text_track_new_trail"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_server_url"
        android:ems="10"
        android:id="@+id/edit_server_url"
        android:layout_below="@+id/text_track_new_trail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="2dp"
        android:hint="@string/edit_server_url"
        android:inputType="textWebEmailAddress" />

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:text=""
    android:ems="10"
    android:id="@+id/edit_username"
    android:layout_below="@+id/edit_server_url"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="2dp"
    android:hint="@string/edit_username" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textVisiblePassword"
    android:text=""
    android:ems="10"
    android:id="@+id/edit_password"
    android:layout_below="@+id/edit_username"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="2dp"
    android:hint="@string/edit_password" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:text=""
    android:ems="10"
    android:id="@+id/edit_trailname"
    android:layout_below="@+id/edit_password"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="2dp"
    android:hint="@string/edit_trailname" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:text=""
    android:ems="10"
    android:id="@+id/edit_description"
    android:layout_below="@+id/edit_trailname"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="2dp"
    android:hint="@string/edit_description" />
<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:text=""
    android:ems="10"
    android:id="@+id/edit_locationname"
    android:layout_below="@+id/edit_description"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="2dp"
    android:hint="@string/edit_locationname" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Send"
    android:id="@+id/button_send"
    android:layout_below="@+id/edit_locationname"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="2dp"
    android:onClick="onClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/button_cancel"
        android:onClick="onClick"
        android:layout_alignTop="@+id/button_send"
        android:layout_alignRight="@+id/edit_locationname"
        android:layout_alignEnd="@+id/edit_locationname" />

</RelativeLayout>
